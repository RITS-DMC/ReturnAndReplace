	<main:TabContainer id="tabContainerid" tabSelect="tabSelect">
		<main:Tab  text="Serialized Components">
			 <t:TreeTable id="treeTableId" rows="{path:'/tData', parameters: {arrayNames:['children']}}" selectionMode="Single" selectionBehavior="Row" enableSelectAll="false" ariaLabelledBy="title" visibleRowCount="15" rowSelectionChange="onRowSelectionChange">

											<t:columns>
												<t:Column width="100%">
													<m:Label text="Component" />
													<t:template>
														<m:Text text="{name}" wrapping="false" />
													</t:template>
												</t:Column>
												<t:Column width="100%">
													<m:Label text="Description" />
													<t:template>
														<m:Text text="{description}" wrapping="false" />
													</t:template>
												</t:Column>
												<t:Column width="100%">
													<m:Label text="Operation" />
													<t:template>
														<m:Text text="{operation}" wrapping="false" />
													</t:template>
												</t:Column>
												<t:Column width="100%">
													<m:Label text="Quantity Required" />
													<t:template>
														<m:Text text="{plannedQty}" wrapping="false" />
													</t:template>
												</t:Column>
												<t:Column width="100%">
													<m:Label text="Qunatity Assembled" />
													<t:template>
														<m:Text text="{assembledQty}" wrapping="false" />
													</t:template>
												</t:Column>
												<t:Column width="100%">
													<m:Label text="Assembly Data" />
													<t:template>
														<m:Text text="{assemblyData}" wrapping="false" />
													</t:template>
												</t:Column>
												<t:Column width="100%">
													<m:Label text="Assembly Date" />
													<t:template>
														<m:Text text="{assyDate}" wrapping="false" />
													</t:template>
												</t:Column>
												
											</t:columns>
										</t:TreeTable>

		</main:Tab>
		<main:Tab   text="Non-Serialized Components">
			<t:Table id="idNonserializedTable" rows="{/tableData}" width="100%" class="classTable" selectionMode="Single" paste="onPaste" selectionBehavior="Row"  visibleRowCount="15">
											<t:columns>
											<t:Column>
													<Label text="SFC" />
													<t:template>
														<Text text="{sfc}" />
													</t:template>
												</t:Column>
												<t:Column>
													<Label text="Component" />
													<t:template>
														<Text text="{component}" />
													</t:template>
												</t:Column>
												<t:Column>
													<Label text="Description" />
													<t:template>
														<Text text="{componentDescription}" />
													</t:template>
												</t:Column>
												<t:Column>
													<Label text="Opeartion" />
													<t:template>
														<Text text="{operationActivity}" />
													</t:template>
												</t:Column>
												<t:Column>
													<Label text="Quantity Required" />
													<t:template>
														<Text text="{requiredQuantity}" />
													</t:template>
												</t:Column>
												<t:Column>
													<Label text="Qunatity Assembled" />
													<t:template>
														<Text text="{assembledQuantity}" />
													</t:template>
												</t:Column>
												<t:Column>
													<Label text="Assembly Data" />
													<t:template>
														<Text text="{assyDate}" />
													</t:template>
												</t:Column>
												
											</t:columns>
										</t:Table>	

		</main:Tab>
		
	</main:TabContainer>
		

</content>	
